{% from ':macros:flash.html.twig' import session_flash %}
<!DOCTYPE html>
{% spaceless %}
<html>
    <head>
        {% block head %}
            <title>{% block title %}havvg's Symfony2 sandbox{% endblock %}</title>

            <meta http-equiv="content-type" content="text/html; charset=utf-8" />
            <meta http-equiv="content-script-type" content="text/javascript" />
            <meta http-equiv="content-language" content="de" />
            <meta name="author" content="Toni Uebernickel" />
            <meta name="robots" content="index,follow" />
            <meta name="allow-search" content="yes" />

            <link rel="author" href="mailto:tuebernickel@gmail.com" title="Toni Uebernickel" rev="made" />
            <link rel="shortcut icon" href="" />
            <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
            <!--[if lt IE 9]>
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->
            {% block stylesheets %}
                {% stylesheets
                    filter="?yui_css"
                    output="css/jquery-ui.css"
                    '../app/Resources/css/jquery-ui/jquery.ui.core.css'
                    '../app/Resources/css/jquery-ui/jquery.ui.theme.css'
                    '../app/Resources/css/jquery-ui/*.css'
                %}
                <link rel="stylesheet" href="{{ asset_url }}" />
                {% endstylesheets %}

                {% stylesheets
                    filter="less,?yui_css"
                    output="css/bootstrap.css"
                    '../app/Resources/bootstrap/bootstrap.less'
                %}
                <link rel="stylesheet" href="{{ asset_url }}" />
                {% endstylesheets %}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block navbar %}{{ knp_menu_render('main', { 'currentClass': 'active', 'template': ':Menu:navbar.html.twig' }) }}{% endblock %}

            {% block container %}
                <section class="container-fluid">
                    {% block flashes %}{{ session_flash() }}{% endblock flashes %}

                    {% block content_layout %}{% endblock %}
                </section>
            {% endblock container %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts
                filter="?yui_js"
                output="js/jquery.js"
                '../app/Resources/js/jquery/jquery.js'
                '../app/Resources/js/jquery/*.js'

                '../app/Resources/js/jquery-ui/jquery.ui.core.js'
                '../app/Resources/js/jquery-ui/jquery.ui.widget.js'
                '../app/Resources/js/jquery-ui/*.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% javascripts
                filter="?yui_js"
                output="js/backbone.js"
                '../vendor/documentcloud/underscore/underscore.js'
                '../vendor/documentcloud/backbone/backbone.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {# Manually call them, solving dependency issues #}
            {% javascripts
                filter="?yui_js"
                output="js/bootstrap.js"
                '../vendor/twitter/bootstrap/js/bootstrap-alert.js'
                '../vendor/twitter/bootstrap/js/bootstrap-button.js'
                '../vendor/twitter/bootstrap/js/bootstrap-carousel.js'
                '../vendor/twitter/bootstrap/js/bootstrap-collapse.js'
                '../vendor/twitter/bootstrap/js/bootstrap-dropdown.js'
                '../vendor/twitter/bootstrap/js/bootstrap-modal.js'
                '../vendor/twitter/bootstrap/js/bootstrap-scrollspy.js'
                '../vendor/twitter/bootstrap/js/bootstrap-tab.js'
                '../vendor/twitter/bootstrap/js/bootstrap-tooltip.js'
                '../vendor/twitter/bootstrap/js/bootstrap-transition.js'
                '../vendor/twitter/bootstrap/js/bootstrap-typeahead.js'
                '../vendor/twitter/bootstrap/js/bootstrap-popover.js'
                '../app/Resources/bootstrap/js/*.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% javascripts
                filter="?yui_js"
                output="js/sandbox.js"
                '../app/Resources/js/sandbox/*.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
{% endspaceless %}
